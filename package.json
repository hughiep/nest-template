{
	"name": "nest-template",
	"version": "0.0.1",
	"description": "",
	"private": true,
	"packageManager": "pnpm@10.6.5",
	"engines": {
		"node": ">=22",
		"pnpm": ">=10"
	},
	"scripts": {
		"typeorm": "typeorm-ts-node-commonjs",
		"migration:create": "npm run typeorm migration:create",
		"migration:generate": "npm run typeorm migration:generate -- -d src/core/config/data-source.ts",
		"migration:run": "npm run build && npm run typeorm migration:run -- -d src/core/config/data-source.ts",
		"migration:revert": "npm run typeorm migration:revert -- -d src/core/config/data-source.ts",
		"migration:show": "npm run typeorm migration:show -- -d src/core/config/data-source.ts",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --max-warnings=0",
		"typecheck": "tsc --noEmit",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/axios": "^4.0.0",
		"@nestjs/common": "^11.1.3",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.0.16",
		"@nestjs/jwt": "^11.0.0",
		"@nestjs/passport": "^11.0.5",
		"@nestjs/platform-express": "^11.1.5",
		"@nestjs/swagger": "^11.2.0",
		"@nestjs/terminus": "^11.0.0",
		"@nestjs/throttler": "^6.4.0",
		"@nestjs/typeorm": "^11.0.0",
		"@types/express-session": "^1.18.1",
		"@types/morgan": "^1.9.10",
		"@types/passport-google-oauth20": "^2.0.16",
		"bcryptjs": "^3.0.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"cookie-parser": "^1.4.7",
		"dotenv": "^16.5.0",
		"express-session": "^1.18.1",
		"helmet": "^8.1.0",
		"morgan": "^1.10.0",
		"nest-winston": "^1.10.2",
		"passport": "^0.7.0",
		"passport-google-oauth20": "^2.0.0",
		"passport-jwt": "^4.0.1",
		"pg": "^8.14.1",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2",
		"swagger-ui-express": "^5.0.1",
		"typeorm": "^0.3.22",
		"typeorm-naming-strategies": "^4.1.0",
		"winston": "^3.17.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.24.0",
		"@nestjs/cli": "^11.0.6",
		"@nestjs/schematics": "^11.0.5",
		"@nestjs/testing": "^11.1.3",
		"@types/express": "^5.0.1",
		"@types/jest": "^29.5.14",
		"@types/node": "^24.0.1",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^8.32.1",
		"@typescript-eslint/parser": "^8.38.0",
		"eslint": "^9.24.0",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-prettier": "^5.2.6",
		"eslint-plugin-promise": "^7.2.1",
		"globals": "^16.0.0",
		"jest": "^29.7.0",
		"prettier": "^3.5.3",
		"source-map-support": "^0.5.21",
		"supertest": "^7.1.4",
		"ts-jest": "^29.3.4",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typeorm-cli": "^1.0.7",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.38.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
