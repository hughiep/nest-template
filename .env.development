# Application
# ===========================================================
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000

# Database configuration
# ===========================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=nest_db

# API docs configuration
# ===========================================================
API_PREFIX=/api/v1
API_DESCRIPTION=NestJS API for development
API_VERSION=1.0.0

# JWT Configuration
JWT_SECRET=supersecretkey_development_replace_in_production
JWT_REFRESH_SECRET=supersecretrefreshkey_development_replace_in_production
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-development
GOOGLE_CLIENT_SECRET=your-google-client-secret-development
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Frontend configuration
FRONTEND_URL=http://localhost:3000
